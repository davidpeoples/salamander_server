<%= form_for(@product) do |f| %>
  <%= render 'shared/error_messages' %>
  <div class="field">
    <%= f.label :category_id %><br />
    <%= f.collection_select :category_id, Category.all_in_order, :id, :full_name %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :default_price %><br />
    <%= f.text_field :default_price %>
  </div>
  <div class="field">
    <%= f.label :default_weight %><br />
    <%= f.text_field :default_weight %>
  </div>
  <div class="field">
    <%= f.label :html %><br />
    <%= f.text_area :html %>
  </div>
  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>